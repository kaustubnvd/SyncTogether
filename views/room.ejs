<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SyncTogether - <%= roomName %></title>
    <link rel="stylesheet" href="/css/style.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"/>
    <!-- Make the following variables available in main.js -->
    <script> const nickname = "<%= nickname %>"; const roomName = "<%= roomName %>"; const backup = "<%= backup %>"; </script>
    <script defer src="https://www.youtube.com/iframe_api"></script>
    <script defer src="/socket.io/socket.io.js"></script>
    <script defer src="/js/main.js"></script>
  </head>
  <body class="room-body">
    <header class="room-header">
      <!-- Logo -->
      <i class="material-icons logo">loop</i>
      <a href="/" id="room-title">SyncTogether</a>
      <!-- Search Bar -->
      <input id="searchbar" type="text" placeholder="Search for YouTube video or enter URL"/>
      <!-- Invite -->
      <button id="invite-btn" class="ignore-click"><i class="material-icons invite-icon ignore-click">person_add_alt_1</i>Invite Friends</button>
      <button id="invite-shortcut"><img src="data:image/png;base64,"></button>
      <div class="invite-modal ignore-click">
        <p class="ignore-click">Invite Link</p>
        <p id="invite-sub" class="ignore-click">Copy the following link and share it with your friends.</p>
        <input id="invite-link" class="ignore-click" type="text" value="https://synctogether.tv/<%=roomName%>" spellcheck="false" readonly>
        <button id="copy" class="ignore-click">Copy</button>
      </div>
    </header>
    <main>
      <!-- YouTube player -->
      <div id="player"></div>
      <!-- Chat -->
      <div class="chat-box">
        <div class="chat-header">
          <span id="room-name"><%= roomName %></span>
        </div>
        <div class="chat-area"></div>
        <input id="chat-input" type="text" placeholder="Enter Message" autocomplete="off">
      </div>
      <!-- YouTube video info -->
      <div class="youtube-meta">
        <div id="video-title"></div>
        <div id="video-date"></div>
      </div>
      <hr id="divider">
      <!-- Participants -->
      <div class="participant-box">
        <span>Participants</span>
        <% for(let user in users) { %>
          <div id="<%= users[user] %>" class="user"><i class="material-icons logo">person</i><%= users[user] %></div>
        <% } %>
      </div>
    </main>
    <!-- Invite link icon credits -->
    <a href="https://icons8.com/icon/91/link" style="display: none;">Link icon by Icons8</a>
  </body>
</html>
